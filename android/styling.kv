WindowManager:
    WelcomeScreen1:
    WelcomeScreen2:
    WelcomeScreen3:
    WelcomeScreen4:
    MainScreen:

<WelcomeScreen1>
    name: "welcome1"
    FloatLayout:
        Label:
            text: "Generate the perfect username with ai"
            font_size: self.width/4
            #pos_hint: {"top":0.3, "right":0.3}
            size_hint:(None, None)
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        Button:
            id: next1
            pos_hint: {"right":1}
            size_hint:(None, None)
            size: self.width, self.height
            background_normal: 'icons/arrow_right.png'
            background_down: 'icons/arrow_right_down.png'
            canvas.before:
                Color:
                    rgba: 0,1,1,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [68]
            on_release:
                app.root.current = "welcome2"
                root.manager.transition.direction = "left"


<WelcomeScreen2>
    name: "welcome2"
    FloatLayout:
        Label:
            text_size: root.width, None
            #size: 100, 100
            markup: True
            text: "I agree that [b]ALL[/b] of my data will stay on this device"
            font_size: self.width/5
            size_hint:(None, None)
            pos_hint: {'center_x': 0.55, 'center_y': 0.2}
        CheckBox:
            id: accept_terms
            size_hint: 0.05,0.05
            pos_hint: {'right':0.95, "top":0.225}
            on_active:
              #  root.checkbox_click(self, self.active)
        Button:
            id: next2
            pos_hint: {"right":1}
            size_hint:(None, None)
            size: self.width, self.height
            background_normal: 'icons/arrow_right.png' if accept_terms.active else 'icons/arrow_right_down.png'
            background_down: 'icons/arrow_right_down.png'
            canvas.before:
                Color:
                    rgba: 0,1,1,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [68]
            on_release:
                app.root.current = "welcome3" if accept_terms.active else "welcome2"
                root.manager.transition.direction = "left"
        Button:
            id: back2
            pos_hint: {"left":1}
            size_hint:(None, None)
            size: self.width, self.height
            background_normal: 'icons/arrow_left.png'
            background_down: 'icons/arrow_left_down.png'
            canvas.before:
                Color:
                    rgba: 0,1,1,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [68]
            on_release:
                app.root.current = "welcome1"
                root.manager.transition.direction = "right"
